    <div class="row justify-content-center">
        <div class="col-10">
            <%= render "shared/errors" %>
                <%= form_with scope: :article, url:articles_path,local:true do |f| %>
                    <div class="shadow p-3 mb-3 bg-info rounded">
                        <div class="form-group row">
                            <%= f.label :title,class:"col-2 col-form-label text-light" %>
                                <div class="col-10">
                                    <%= f.text_field :title,class:"form-control mb-3 shadow-rounded",placeholder:"Title"
                                        %>
                                </div>
                        </div>

                        <div class=" form-group row">
                            <%= f.label :Description,class:"col-2 col-form-label text-light" %>
                                <div class="col-10">
                                    <%= f.text_area :description,rows:10,class:"form-control mb-3
                                        shadow-rounded",placeholder:"Description of Article" %>
                                </div>
                        </div>

                        <div class="form-group row justify-content-center">
                            <%= f.submit class:"btn btn-outline-light btn-lg" %>
                        </div>
                    </div>
                    <% end %>
        </div>

    </div>

