    <div class="container">
    <div class="shadow p-3 mb-5 bg-body rounded">
        <div class="container">
            <% @articles.each do |article| %>
                <div class="row justify-content-md-center">
                    <div class="col-8 mt-4 shadow mb-5 bg-body rounded">
                        <div class="card text-center">
                            <div class="card-header font-italic">
                                by <%= article.user.username if article.user%>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= link_to article.title, article_path(article),class: "text-success" %>
                                </h5>
                                <p class="card-text">
                                    <%= truncate(article.description,length:100) %>
                                </p>
                                <%= link_to 'Show' , article_path(article), class:"btn btn-outline-success" %>
                                    <%= link_to 'Edit' , edit_article_path(article),class:"btn btn-outline-primary" %>
                                        <%= link_to 'Delete' , article_path(article), data: {
                                            turbo_confirm: "Are you sure?" ,turbo_method: :delete }, class:"btn
                                            btn-outline-danger" %>
                            </div>
                            <div class="card-footer text-muted">
                                <small>Created<%= time_ago_in_words(article.created_at)%> ago,Edited<%=
                                            time_ago_in_words(article.updated_at)%> ago</small>
                            </div>
                        </div>
                    </div>
                </div>
                <%end%>
        </div>
        </div>